{
    "name": "cryo-lang",
    "displayName": "Cryo Language",
    "description": "Full language support for Cryo programming language - autocomplete, go to definition, formatting",
    "version": "2.0.1",
    "publisher": "cryo-lang",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Snippets"
    ],
    "keywords": [
        "cryo",
        "programming language",
        "systems programming"
    ],
    "activationEvents": [
        "onLanguage:cryo"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cryo",
                "aliases": [
                    "Cryo",
                    "cryo"
                ],
                "extensions": [
                    ".cryo"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cryo",
                "scopeName": "source.cryo",
                "path": "./syntaxes/cryo.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "cryo",
                "path": "./snippets/cryo.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.0"
    }
}
