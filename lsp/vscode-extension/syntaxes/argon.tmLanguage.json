{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Argon",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#structs"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.argon",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.argon",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.argon",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.argon",
                    "match": "\\b(if|else|while|return|break|continue|match)\\b"
                },
                {
                    "name": "keyword.other.argon",
                    "match": "\\b(fn|let|struct|enum|impl|import|from)\\b"
                },
                {
                    "name": "constant.language.argon",
                    "match": "\\b(true|false|null)\\b"
                },
                {
                    "name": "storage.type.argon",
                    "match": "\\b(int|string|bool|any)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.argon",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "structs": {
            "patterns": [
                {
                    "match": "\\b(struct|enum)\\s+([A-Z][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.other.argon"
                        },
                        "2": {
                            "name": "entity.name.type.argon"
                        }
                    }
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.argon",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.argon",
                    "match": "(==|!=|<=|>=|=>|\\+|\\-|\\*|\\/|<|>|=)"
                }
            ]
        }
    },
    "scopeName": "source.argon"
}