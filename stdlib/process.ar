// Run a shell command (simple version)
fn shell(command_str) {
    // Would use system shell
    // Unix: sh -c "command"
    let cmd = command_new("sh");
    cmd = command_arg(cmd, "-c");
    cmd = command_arg(cmd, command_str);
    return command_run(cmd);
}

