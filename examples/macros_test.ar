macro sayHello(name) {
    print("Hello, " + $name);
}

macro checkDebug(cond) {
     if ($cond) {
         print("Debug Mode ON");
     } else {
         print("Debug Mode OFF");
     }
}

fn main() {
    print("Macro Test Start");
    
    sayHello("World");
    
    let user = "Argon User";
    sayHello(user);
    
    checkDebug(true);
    checkDebug(false);
    
    print("Macro Test End");
}
