// Test struct feature in Argon

// Define a simple Point struct
struct Point {
    x: int,
    y: int
}

// Define a Rectangle struct
struct Rectangle {
    width: int,
    height: int
}

fn create_point(x, y) {
    return Point { x: x, y: y };
}

fn add_points(p1, p2) {
    let new_x = p1.x + p2.x;
    let new_y = p1.y + p2.y;
    return Point { x: new_x, y: new_y };
}

fn calculate_area(rect) {
    return rect.width * rect.height;
}

fn main() {
    print("=== Argon Struct Test ===");
    print("");
    
    // Test 1: Create a simple point
    print("Test 1: Create Point");
    let p1 = Point { x: 10, y: 20 };
    print("  p1.x =");
    print(p1.x);
    print("  p1.y =");
    print(p1.y);
    
    // Test 2: Create point using function
    print("");
    print("Test 2: Create Point via function");
    let p2 = create_point(30, 40);
    print("  p2.x =");
    print(p2.x);
    print("  p2.y =");
    print(p2.y);
    
    // Test 3: Add two points
    print("");
    print("Test 3: Add Points");
    let p3 = add_points(p1, p2);
    print("  p3.x = p1.x + p2.x =");
    print(p3.x);
    print("  p3.y = p1.y + p2.y =");
    print(p3.y);
    
    // Test 4: Rectangle and area
    print("");
    print("Test 4: Rectangle Area");
    let rect = Rectangle { width: 5, height: 8 };
    print("  width =");
    print(rect.width);
    print("  height =");
    print(rect.height);
    let area = calculate_area(rect);
    print("  area =");
    print(area);
    
    print("");
    print("=== All Tests Complete! ===");
}
